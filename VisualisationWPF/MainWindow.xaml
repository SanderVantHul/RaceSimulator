<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualisationWPF"
        xmlns:Controller="clr-namespace:Controller;assembly=Controller" x:Class="VisualisationWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Window.DataContext>
        <Controller:DataContextWPF/>
    </Window.DataContext>
    <Grid Background="Black">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="Menu">
                    <MenuItem Header="CompetitionStats" Click="MenuItem_ShowCompetitionStats_Click"/>
                    <MenuItem Header="RaceStats" Click="MenuItem_ShowRaceStatsWindow_Click"/>
                    <MenuItem Header="Exit Application" Click="MenuItem_Exit_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Label Content="{Binding TrackName, Mode=OneWay}" />
        <Image x:Name="ImageComponent" Margin="47,14,47,14"/>
    </Grid>
</Window>
